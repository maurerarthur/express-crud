<div class="container mt-3">

    <div class="row">

        <div class="alert alert-primary d-flex justify-content-center align-items-center w-100" role="alert">
            <h3>Product Registration</h3>
        </div>

        <form method="POST" action="/create" class="col-12 w-100">

            <div class="form-group">
                <label>Product</label>
                <input type="text" placeholder="Enter something" class="form-control" name="product" required>
            </div>

            <div class="form-group">
                <label>Description</label>
                <input type="text" placeholder="Describe the product" class="form-control" name="description" required>
              </div>

            <div class="form-group">
                <label class="m-0">Quantity</label><br>
                <small>How many of this product there are?</small>
                <input type="number" min="1" step="1" value="1" placeholder="1" class="form-control" name="quantity" required>
            </div>

            <button type="submit" class="btn btn-primary w-100">Submit</button>

        </form>

    </div>

</div>