<div class="container mt-3">

    <div class="row">

        <div class="alert alert-success d-flex justify-content-center align-items-center w-100" role="alert">
            <h3>Registered Products</h3>
        </div>

        <form method="POST" action="/delete" class="col-12 w-100">

            <table class="table table-striped table-hover">

                <thead>
                    <tr>
                        <th scope="col">Product</th>
                        <th scope="col">Description</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>

                <tbody>

                    <% productList.forEach(i => { %>
                        <tr>
                            <th><%= i.product %></th>
                            <td><%= i.description %></td>
                            <td><%= i.quantity %></td>
                            <td>
                                <button value="<%= i._id %>" type="submit" name="deletedProduct" class="btn btn-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    <% }); %>

                </tbody>

            </table>

        </form>

    </div>

</div>