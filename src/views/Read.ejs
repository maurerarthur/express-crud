<div class="container mt-3">

    <div class="row">

        <div class="alert alert-success d-flex justify-content-center align-items-center w-100" role="alert">
            <h3>Registered Products</h3>
        </div>

        <% if(productList.length == 0) { %>

            <div class="d-flex align-items-center justify-content-center w-100">
                <h3>There are no registered products</h3>
            </div>

        <% } else { %>

            <form method="POST" action="/delete" class="col-12 w-100">

                <table class="table table-striped table-hover">

                    <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Description</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Update</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>

                    <tbody>

                        <% productList.forEach(i => { %>
                            <tr>
                                <th><%= i.product %></th>
                                <td><%= i.description %></td>
                                <td><%= i.quantity %></td>
                                <td>
                                    <a href="/update?id=<%= i._id %>" class="btn btn-primary">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                </td>
                                <td>
                                    <button value="<%= i._id %>" type="submit" name="deletedProduct" class="btn btn-danger" onclick="return window.confirm('Are you sure you want to delete this product?');">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        <% }); %>

                    </tbody>

                </table>

            </form>

        <%  } %>

    </div>

</div>