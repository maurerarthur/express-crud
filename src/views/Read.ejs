<div class="container mt-3">

    <div class="row">

        <div class="alert alert-success d-flex justify-content-center align-items-center w-100" role="alert">
            <h3>Registered Products</h3>
        </div>

        <table class="table table-striped">

            <thead>
                <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Description</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>

            <tbody>

                <% productList.forEach(i => { %>
                    <tr>
                        <th scope="row"><%= i.product %></th>
                        <td><%= i.description %></td>
                        <td><%= i.quantity %></td>
                    </tr>
                <% }); %>

            </tbody>

        </table>

    </div>

</div>